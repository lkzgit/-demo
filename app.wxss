
@import "./styles/iconfont.wxss";

/* 在小程序当中不支持通配符 */
/* page 表示最外层标签 可以在控制台看到
    标签初始化
*/
 page,view,text,swiper,swiper-item,image,navigator{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
/* 主题颜色 通过一个变量实现 
    1，less中存在变量这个
    2.原生的css和wxss也支持
*/
page{
    /* 定义主题颜色 */
    --themColor:#eb4450;
    /* 定义统一的字体大小 */
    font-size:28rpx;
   
}
